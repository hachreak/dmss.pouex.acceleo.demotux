<?xml version="1.0" encoding="ASCII"?>
<pouexmm:Game
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:pouexmm="http://pouexmm/1.0"
    name="index">
  <pouex name="Tux">
    <actions
        xsi:type="pouexmm:PouexAction"
        name="Play"
        enable="true">
      <influences
          feature="//@pouex/@features.0"
          operator="SUBTRACTION"
          value="1.0"/>
      <influences
          feature="//@pouex/@features.1"
          value="1.0"/>
      <influences
          feature="//@pouex/@features.2"
          value="5.0"/>
      <influences
          feature="//@pouex/@features.4"
          value="5.0"/>
    </actions>
    <actions
        xsi:type="pouexmm:PouexAction"
        name="Eat"
        enable="true">
      <influences
          feature="//@pouex/@features.0"
          value="10.0"/>
      <influences
          feature="//@pouex/@features.4"
          operator="SUBTRACTION"
          value="5.0"/>
    </actions>
    <actions
        xsi:type="pouexmm:PouexAction"
        name="Clean"
        enable="true">
      <influences
          feature="//@pouex/@features.1"
          operator="SUBTRACTION"
          value="1.0"/>
      <influences
          feature="//@pouex/@features.2"
          operator="SUBTRACTION"
          value="15.0"/>
    </actions>
    <actions
        xsi:type="pouexmm:TimeEvent"
        name="happy birthday"
        enable="true"
        eachMillisec="10000">
      <influences
          feature="//@pouex/@features.3"
          value="1.0"/>
    </actions>
    <actions
        xsi:type="pouexmm:TimeEvent"
        name="each 1s"
        enable="true">
      <influences
          feature="//@pouex/@features.4"
          value="0.01"/>
    </actions>
    <states
        name="Happy">
      <activationConditions
          xsi:type="pouexmm:MaxThresholdActivationCondition"
          name="Pouex is happy"
          threshold="7.0"
          feature="//@pouex/@features.1"/>
      <bodyAlterations
          bodyPart="//@pouex/@bodyparts.0/@subparts.3"
          image="mouth_happy.png"/>
    </states>
    <states
        xsi:type="pouexmm:StateDead"
        name="TheEnd">
      <activationConditions
          xsi:type="pouexmm:MaxThresholdActivationCondition"
          name="Pouex died for obesity"
          threshold="80.0"
          feature="//@pouex/@features.0"/>
      <activationConditions
          xsi:type="pouexmm:MinThresholdActivationCondition"
          name="if is not happy, died"
          threshold="1.0"
          feature="//@pouex/@features.1"/>
      <activationConditions
          xsi:type="pouexmm:MaxThresholdActivationCondition"
          name="if very old"
          threshold="99.0"
          feature="//@pouex/@features.3"/>
      <activationConditions
          xsi:type="pouexmm:AndLogicActivationCondition"
          name="if hungry and dirty">
        <terms
            xsi:type="pouexmm:StateActivationCondition"
            name="if hungry"
            state="//@pouex/@states.3"
            condition="true"/>
        <terms
            xsi:type="pouexmm:StateActivationCondition"
            name="and dirty"
            state="//@pouex/@states.2"
            condition="true"/>
      </activationConditions>
      <activationConditions
          xsi:type="pouexmm:MaxThresholdActivationCondition"
          name="if very hungry"
          threshold="99.0"
          feature="//@pouex/@features.4"/>
    </states>
    <states
        name="Dirty">
      <activationConditions
          xsi:type="pouexmm:MaxThresholdActivationCondition"
          name="if very much dirty"
          threshold="80.0"
          feature="//@pouex/@features.2"/>
      <bodyAlterations
          bodyPart="//@pouex/@bodyparts.0"
          image="body_dirty.png"/>
    </states>
    <states
        name="Hungry">
      <activationConditions
          xsi:type="pouexmm:MaxThresholdActivationCondition"
          name="very hungry"
          threshold="80.0"
          feature="//@pouex/@features.4"/>
    </states>
    <features
        xsi:type="pouexmm:Physic"
        default="20.0"
        minimum="5.0"
        maximum="100.0"
        name="Weight"
        MeasurementUnit="kg"/>
    <features
        xsi:type="pouexmm:Emotional"
        default="3.0"
        maximum="10.0"
        name="Happiness"
        MeasurementUnit="hp"/>
    <features
        xsi:type="pouexmm:Physic"
        default="30.0"
        maximum="100.0"
        name="Dirty"
        MeasurementUnit="dirtness"/>
    <features
        xsi:type="pouexmm:Physic"
        maximum="100.0"
        name="Age"
        MeasurementUnit="years"/>
    <features
        xsi:type="pouexmm:Physic"
        default="10.0"
        maximum="100.0"
        name="Hungry"
        MeasurementUnit=""/>
    <bodyparts
        name="body"
        image="body.png"
        width="190"
        height="179">
      <subparts
          name="eyebrows"
          image="eyebrows.png"
          width="76"
          height="32"
          left="58"/>
      <subparts
          name="eye_dx"
          image="eye_dx.png"
          width="37"
          height="45"
          left="-20"
          top="14"/>
      <subparts
          name="eye_sx"
          image="eye_sx.png"
          width="35"
          height="34"
          left="-25"
          top="11"/>
      <subparts
          name="mouth"
          image="mouth.png"
          width="30"
          height="24"
          left="-80"
          top="28"/>
      <subparts
          name="arm_dx"
          image="arm_dx.png"
          width="37"
          height="61"
          left="10"/>
      <subparts
          name="arm_sx"
          image="arm_sx.png"
          width="37"
          height="61"
          left="100"/>
      <subparts
          name="foot_dx"
          image="foot_dx.png"
          width="61"
          height="31"
          left="-50"
          top="48"/>
      <subparts
          name="foot_sx"
          image="foot_sx.png"
          width="61"
          height="31"
          left="90"
          top="13"/>
    </bodyparts>
  </pouex>
</pouexmm:Game>
